<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FlashWorkerClan" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_F7E047</item>
        <item name="colorPrimaryVariant">@color/color_F7E047</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_F7E047</item>
        <item name="colorSecondaryVariant">@color/color_FFC107</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorPrimaryDark">@color/color_FFC107</item>
        <item name="colorAccent">@color/color_F7E047</item>
    </style>


    <style name="bottom_tab_title_active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/dp_26</item>
    </style>

    <style name="bottom_tab_title_inactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/dp_22</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>