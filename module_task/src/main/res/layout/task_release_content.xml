<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_200"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource,ResourceName">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mClEmployer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:paddingLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_42"
        android:paddingTop="@dimen/dp_13"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">

        <com.flash.worker.lib.common.view.widget.RequiredTextView
            android:id="@+id/rtv_employer"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp_28"
            app:prefix_color="@color/color_E26853"
            app:android_text=" 雇主"/>

        <TextView
            android:id="@+id/mTvEmployer"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_80"
            android:drawableRight="@mipmap/ic_right"
            android:drawablePadding="@dimen/dp_22"
            android:gravity="center|right"
            android:hint="请选择雇主信息"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_28"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rtv_employer"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            style="@style/base_line_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/dp_17"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_13">

        <com.flash.worker.lib.common.view.widget.RequiredTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp_28"
            app:prefix_color="@color/color_E26853"
            app:android_text=" 任务名称"/>

        <EditText
            android:id="@+id/mEtTitle"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_title"
            android:background="@null"
            android:hint="请填写任务名称"
            android:maxLength="12"
            android:maxLines="1"
            android:inputType="text"
            android:gravity="center|right"
            android:textSize="@dimen/dp_28"
            android:textColor="@color/color_333333"/>

        <View
            style="@style/base_line_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/dp_17"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_13">

        <com.flash.worker.lib.common.view.widget.RequiredTextView
            android:id="@+id/tv_task_count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp_28"
            app:prefix_color="@color/color_E26853"
            app:android_text=" 任务数量"/>

        <EditText
            android:id="@+id/mEtTaskCount"
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_task_count"
            android:layout_marginStart="@dimen/dp_28"
            android:layout_marginEnd="@dimen/dp_28"
            android:background="@null"
            android:hint="最大1000"
            android:inputType="number"
            android:gravity="center"
            android:textSize="@dimen/dp_28"
            android:textColor="@color/color_333333"/>

        <View
            style="@style/base_line_horizontal"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/mEtTaskCount"
            app:layout_constraintEnd_toEndOf="@+id/mEtTaskCount"
            android:layout_marginLeft="@dimen/dp_17"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mEtTaskCount"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_28"
            android:text="件"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_13">

        <com.flash.worker.lib.common.view.widget.RequiredTextView
            android:id="@+id/tv_employment_count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp_28"
            app:prefix_color="@color/color_E26853"
            app:android_text=" 报酬单价"/>

        <EditText
            android:id="@+id/mEtPrice"
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_employment_count"
            android:layout_marginStart="@dimen/dp_28"
            android:layout_marginEnd="@dimen/dp_28"
            android:background="@null"
            android:hint="输入单价"
            android:inputType="number"
            android:maxLength="5"
            android:gravity="center"
            android:textSize="@dimen/dp_28"
            android:textColor="@color/color_333333"/>

        <View
            style="@style/base_line_horizontal"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/mEtPrice"
            app:layout_constraintEnd_toEndOf="@+id/mEtPrice"
            android:layout_marginLeft="@dimen/dp_17"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mEtPrice"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_28"
            android:text="元/件"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mClWorkAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13">

        <com.flash.worker.lib.common.view.widget.RequiredTextView
            android:id="@+id/mRtvWorkAddress"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            android:paddingLeft="@dimen/dp_25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp_28"
            app:prefix_color="@color/color_E26853"
            app:android_text=" 完成时限"/>

        <RadioGroup
            android:id="@+id/mRgCompletionTime"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_42"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/mRbHour"
                android:layout_width="@dimen/dp_103"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_13"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:textColor="@color/rb_student_title_color"
                android:background="@drawable/rb_student_selector"
                android:drawablePadding="@dimen/dp_24"
                android:textSize="@dimen/dp_24"
                android:text="小时"/>
            <RadioButton
                android:id="@+id/mRbDay"
                android:layout_width="@dimen/dp_103"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:paddingTop="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_13"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/rb_student_title_color"
                android:background="@drawable/rb_student_selector"
                android:drawablePadding="@dimen/dp_24"
                android:textSize="@dimen/dp_24"
                android:text="天"/>
        </RadioGroup>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mClFinishTimeLimit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintTop_toBottomOf="@+id/mRgCompletionTime"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">
            <TextView
                android:id="@+id/mTvFinishTimeLimit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_finish_time_limit_unit"
                android:gravity="center|right"
                android:paddingEnd="@dimen/dp_5"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp_28"/>
            <TextView
                android:id="@+id/tv_finish_time_limit_unit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@+id/mTvFinishTimeLimit"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawableRight="@mipmap/ic_right"
                android:drawablePadding="@dimen/dp_22"
                android:gravity="center|right"
                android:paddingEnd="@dimen/dp_42"
                android:hint="选择小时数"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp_28"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            style="@style/base_line_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/dp_42"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mClSettlementTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_13">

        <com.flash.worker.lib.common.view.widget.RequiredTextView
            android:id="@+id/mRtvSettlementTime"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            android:paddingLeft="@dimen/dp_25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp_28"
            app:prefix_color="@color/color_E26853"
            app:android_text=" 结算时间"/>

        <RadioGroup
            android:id="@+id/mRgSettlementTime"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/mRb24Hour"
                android:layout_width="@dimen/dp_173"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_13"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:textColor="@color/rb_student_title_color"
                android:background="@drawable/rb_student_selector"
                android:drawablePadding="@dimen/dp_24"
                android:textSize="@dimen/dp_24"
                android:text="24小时内"/>
            <RadioButton
                android:id="@+id/mRb48Hour"
                android:layout_width="@dimen/dp_173"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:paddingTop="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_13"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/rb_student_title_color"
                android:background="@drawable/rb_student_selector"
                android:drawablePadding="@dimen/dp_24"
                android:textSize="@dimen/dp_24"
                android:text="48小时内"/>
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mClPieces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_13">

        <com.flash.worker.lib.common.view.widget.RequiredTextView
            android:id="@+id/mRtvPieces"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            android:paddingLeft="@dimen/dp_25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp_28"
            app:prefix_color="@color/color_E26853"
            app:android_text=" 可接件数"/>

        <RadioGroup
            android:id="@+id/mRgPieces"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/mRbSingle"
                android:layout_width="@dimen/dp_173"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_13"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:textColor="@color/rb_student_title_color"
                android:background="@drawable/rb_student_selector"
                android:drawablePadding="@dimen/dp_24"
                android:textSize="@dimen/dp_24"
                android:text="一人一件"/>
            <RadioButton
                android:id="@+id/mRbMultiple"
                android:layout_width="@dimen/dp_173"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:paddingTop="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_13"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/rb_student_title_color"
                android:background="@drawable/rb_student_selector"
                android:drawablePadding="@dimen/dp_24"
                android:textSize="@dimen/dp_24"
                android:text="一人多件"/>
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_42"
        android:paddingRight="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_48">

        <TextView
            android:id="@+id/tv_public_tel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mTogglePublicTel"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center|right"
            android:textSize="@dimen/dp_28"
            android:textColor="@color/color_666666"
            android:text="公开联系方式"/>

        <Switch
            android:id="@+id/mTogglePublicTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:thumb="@drawable/switch_thumb_selector"
            android:track="@drawable/switch_track_selector"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mClTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_13"
        android:visibility="gone"
        tools:visibility="visible">

        <com.flash.worker.lib.common.view.widget.RequiredTextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp_28"
            app:prefix_color="@color/color_E26853"
            app:android_text=" 联系方式"/>

        <EditText
            android:id="@+id/mEtTel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintStart_toEndOf="@+id/tv_tel"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_5"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_et_line"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="13"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:textSize="@dimen/dp_28"
            android:textColor="@color/color_333333"
            android:hint="请输入联系方式"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_27"
        android:background="@color/color_F9F9F9"/>

    <com.flash.worker.lib.common.view.widget.RequiredTextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_80"
        android:paddingLeft="@dimen/dp_25"
        android:gravity="center"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_28"
        app:prefix_color="@color/color_E26853"
        app:android_text=" 任务描述"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_42"
        android:paddingRight="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_27">

        <EditText
            android:id="@+id/mEtDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:minHeight="@dimen/dp_200"
            android:maxLength="500"
            android:textSize="@dimen/dp_24"
            android:textColor="@color/color_333333"
            android:padding="@dimen/dp_10"
            android:gravity="left|top"
            android:background="@drawable/border_cccccc_radius_7"
            android:hint="【步骤一】：\n【步骤二】：\n\t...."/>

        <TextView
            android:id="@+id/mTvDescriptionCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_13"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/dp_24"
            android:text="0/500"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.flash.worker.lib.common.view.widget.RequiredTextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_80"
        android:paddingLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="center"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_28"
        app:prefix_color="@color/color_E26853"
        app:android_text=" 任务提交"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_42"
        android:paddingRight="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_27">

        <CheckBox
            android:id="@+id/mChkOrderNo"
            android:layout_width="@dimen/dp_147"
            android:layout_height="@dimen/dp_60"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/rb_student_title_color"
            android:background="@drawable/rb_student_selector"
            android:gravity="center"
            android:textSize="@dimen/dp_28"
            android:text="单号"
            android:button="@null"/>

        <CheckBox
            android:id="@+id/mChkIdNumber"
            android:layout_width="@dimen/dp_257"
            android:layout_height="@dimen/dp_60"
            app:layout_constraintStart_toEndOf="@+id/mChkOrderNo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dp_26"
            android:textColor="@color/rb_student_title_color"
            android:background="@drawable/rb_student_selector"
            android:gravity="center"
            android:textSize="@dimen/dp_28"
            android:text="身份证号后六位"
            android:button="@null"/>

        <CheckBox
            android:id="@+id/mChkScreenShot"
            android:layout_width="@dimen/dp_147"
            android:layout_height="@dimen/dp_60"
            app:layout_constraintStart_toEndOf="@+id/mChkIdNumber"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dp_26"
            android:textColor="@color/rb_student_title_color"
            android:background="@drawable/rb_student_selector"
            android:gravity="center"
            android:textSize="@dimen/dp_28"
            android:text="截图"
            android:button="@null"/>

        <CheckBox
            android:id="@+id/mChkUserName"
            android:layout_width="@dimen/dp_147"
            android:layout_height="@dimen/dp_60"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mChkOrderNo"
            android:layout_marginTop="@dimen/dp_26"
            android:textColor="@color/rb_student_title_color"
            android:background="@drawable/rb_student_selector"
            android:gravity="center"
            android:textSize="@dimen/dp_28"
            android:text="用户名"
            android:button="@null"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_42"
        android:paddingTop="@dimen/dp_30"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        android:text="示例图片(限4张)"/>

    <com.flash.worker.lib.common.view.widget.LMRecyclerView
        android:id="@+id/mRvWorksPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_22"
        android:paddingRight="@dimen/dp_22"
        android:paddingBottom="@dimen/dp_20"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        app:spanCount="4"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mClAgeRequirement"
        android:layout_width="match_parent"
