<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="EmployerDetailTabStyle" parent="Widget.Design.TabLayout" tools:ignore="ResourceName">
        <item name="tabIndicator">@drawable/bg_tab_indicator</item>
        <item name="tabIndicatorColor">@color/color_FFD424</item>
        <item name="tabIndicatorHeight">@dimen/dp_4</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/EmployerDetailTabTextAppearance</item>
        <item name="tabTextColor">@color/color_999999</item>
        <item name="tabSelectedTextColor">@color/color_333333</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="EmployerDetailTabTextAppearance" parent="TextAppearance.Design.Tab" tools:ignore="ResourceName">
        <item name="android:textSize">@dimen/dp_28</item>
        <item name="textAllCaps">false</item>
    </style>


</resources>