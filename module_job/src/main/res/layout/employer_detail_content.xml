<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_35"
    android:background="@drawable/shape_white_radius_13"
    tools:ignore="MissingDefaultResource,ResourceName">

    <LinearLayout
        android:id="@+id/ll_talent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="@dimen/dp_21"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/line_talent"
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_27"
            android:background="@color/color_FFD424"/>

        <TextView
            android:id="@+id/tv_talent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_21"
            android:textStyle="bold"
            android:textSize="@dimen/dp_32"
            android:textColor="@color/color_333333"
            android:text="详细信息"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_business_license"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_talent"
        android:layout_below="@+id/ll_talent"
        android:layout_marginTop="@dimen/dp_39"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_28"
        android:text="企业资质："/>

    <TextView
        android:id="@+id/mTvBusinessLicense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_21"
        app:layout_constraintTop_toBottomOf="@+id/tv_business_license"
        app:layout_constraintStart_toStartOf="@+id/tv_business_license"
        android:layout_marginTop="@dimen/dp_39"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_28"
        android:text="营业执照未认证。"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/mIvBusinessLicense"
        android:layout_width="@dimen/dp_267"
        android:layout_height="@dimen/dp_193"
        app:layout_constraintTop_toBottomOf="@+id/tv_business_license"
        app:layout_constraintStart_toStartOf="@+id/tv_business_license"
        android:layout_marginTop="@dimen/dp_37"
        android:layout_marginLeft="@dimen/dp_40"
        android:src="@mipmap/img_business_license"/>

    <View
        android:id="@+id/line_business_license"
        style="@style/base_line_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/mIvBusinessLicense"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginRight="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_66"/>

    <TextView
        android:id="@+id/tv_work_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_business_license"
        android:layout_marginTop="@dimen/dp_66"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_28"
        android:text="雇主介绍："/>

    <TextView
        android:id="@+id/mTvEmployerIntroduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_work_description"
        android:layout_marginTop="@dimen/dp_39"
        android:paddingBottom="@dimen/dp_60"
        android:paddingLeft="@dimen/dp_21"
        android:paddingRight="@dimen/dp_21"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_28"
        android:text="没啥介绍信息没啥介绍信息没啥介绍信息没啥介绍信息没啥介绍信息没啥介绍信息"/>

</androidx.constraintlayout.widget.ConstraintLayout>


