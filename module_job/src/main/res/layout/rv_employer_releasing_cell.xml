<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mClJobReleaseCell"
    android:background="@color/white"
    android:paddingRight="@dimen/dp_42"
    android:paddingBottom="@dimen/dp_28"
    android:layout_marginBottom="@dimen/dp_13"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/mTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginLeft="@dimen/dp_42"
        android:drawableLeft="@mipmap/ic_job_lable"
        android:drawableRight="@mipmap/ic_urgent"
        android:drawablePadding="@dimen/dp_13"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_32"
        android:text="JAVA工程师"/>

    <TextView
        android:id="@+id/mTvDeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/mTvTitle"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="录取截至：01.11"/>

    <TextView
        android:id="@+id/mTvServiceArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/mTvTitle"
        android:drawableLeft="@mipmap/ic_empty_location"
        android:drawablePadding="@dimen/dp_13"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_999999"
        android:text="南山区"/>

    <TextView
        android:id="@+id/mTvWorkDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/mTvTitle"
        app:layout_constraintTop_toBottomOf="@id/mTvTitle"
        android:layout_marginTop="@dimen/dp_25"
        android:textStyle="bold"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="工作日期：12.30 - 01.12(8小时/日)"/>

    <TextView
        android:id="@+id/mTvRemuneration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mTvWorkDate"
        app:layout_constraintBottom_toBottomOf="@+id/mTvWorkDate"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/color_E26853"
        android:textSize="@dimen/dp_28"
        android:text="11,234.00元"/>

    <TextView
        android:id="@+id/mTvHireCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/mTvTitle"
        app:layout_constraintTop_toBottomOf="@+id/mTvWorkDate"
        android:layout_marginTop="@dimen/dp_17"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="雇用5人"/>

    <View
        android:id="@+id/line_hire_count"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_23"
        android:background="@color/color_999999"
        app:layout_constraintTop_toTopOf="@+id/mTvHireCount"
        app:layout_constraintBottom_toBottomOf="@+id/mTvHireCount"
        app:layout_constraintLeft_toRightOf="@+id/mTvHireCount"
        android:layout_marginLeft="@dimen/dp_13"/>

    <TextView
        android:id="@+id/mTvSignUpCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/line_hire_count"
        app:layout_constraintTop_toTopOf="@+id/mTvHireCount"
        app:layout_constraintBottom_toBottomOf="@+id/mTvHireCount"
        android:layout_marginLeft="@dimen/dp_13"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="报名43人"/>

    <View
        android:id="@+id/line_hired_count"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_23"
        android:background="@color/color_999999"
        app:layout_constraintTop_toTopOf="@+id/mTvHireCount"
        app:layout_constraintBottom_toBottomOf="@+id/mTvHireCount"
        app:layout_constraintLeft_toRightOf="@+id/mTvSignUpCount"
        android:layout_marginLeft="@dimen/dp_13"/>

    <TextView
        android:id="@+id/mTvHiredCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/line_hired_count"
        app:layout_constraintTop_toTopOf="@+id/mTvHireCount"
        app:layout_constraintBottom_toBottomOf="@+id/mTvHireCount"
        android:layout_marginLeft="@dimen/dp_13"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="报名43人"/>

    <TextView
        android:id="@+id/mTvUnitPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mTvHireCount"
        app:layout_constraintBottom_toBottomOf="@+id/mTvHireCount"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/color_E26853"
        android:textSize="@dimen/dp_24"
        android:text="时薪:100.00元"/>

    <com.flash.worker.lib.common.view.widget.FlowLayout
        android:id="@+id/mFlEmployer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvHireCount"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_42"
        app:flChildSpacing="@dimen/dp_13"
        app:flChildSpacingForLastRow="align"
        app:flRowSpacing="@dimen/dp_13"/>


    <TextView
        android:id="@+id/mTvCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/mTvTitle"
        app:layout_constraintTop_toBottomOf="@+id/mFlEmployer"
        android:layout_marginTop="@dimen/dp_27"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_666666"
        android:text="深圳计算有限公司"/>

    <ImageView
        android:id="@+id/mIvCompanyVerified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/mTvCompany"
        app:layout_constraintTop_toTopOf="@+id/mTvCompany"
        app:layout_constraintBottom_toBottomOf="@+id/mTvCompany"
        android:src="@mipmap/ic_company_verified"
        android:layout_marginLeft="@dimen/dp_20"/>

</androidx.constraintlayout.widget.ConstraintLayout>

