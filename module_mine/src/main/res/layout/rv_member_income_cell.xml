<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:paddingTop="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15"
    android:paddingStart="@dimen/dp_30"
    android:paddingEnd="@dimen/dp_30"
    tools:ignore="MissingDefaultResource,ResourceName">

    <TextView
        android:id="@+id/mTvBizName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_32"
        android:text="4月公会活动经费"/>

    <TextView
        android:id="@+id/mTvBizDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/mTvBizName"
        app:layout_constraintEnd_toStartOf="@+id/mTvStatus"
        app:layout_constraintTop_toBottomOf="@+id/mTvBizName"
        android:layout_marginTop="@dimen/dp_18"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="2021年4月成员总收入1,100,000元"/>

    <TextView
        android:id="@+id/mTvPaymentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/mTvBizName"
        app:layout_constraintTop_toBottomOf="@+id/mTvBizDesc"
        android:layout_marginTop="@dimen/dp_18"
        android:gravity="center"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="2020.12.22  20:05:41"/>

    <TextView
        android:id="@+id/mTvCommissionAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mTvBizName"
        app:layout_constraintBottom_toBottomOf="@+id/mTvBizName"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_32"
        android:text="2000.00"/>

    <TextView
        android:id="@+id/mTvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mTvBizDesc"
        app:layout_constraintBottom_toBottomOf="@+id/mTvBizDesc"
        android:gravity="center"
        android:textColor="@color/color_0CA400"
        android:textSize="@dimen/dp_32"
        android:text="已到账"/>

</androidx.constraintlayout.widget.ConstraintLayout>