<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResourceName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_200">

        <TextView
            android:id="@+id/mTvTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_66"
            android:drawableTop="@mipmap/ic_cancel_account"
            android:drawablePadding="@dimen/dp_66"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_36"
            android:text="将136****000所绑定的账号注销"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:paddingStart="@dimen/dp_90"
            android:paddingEnd="@dimen/dp_90"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp_26"
            android:text="\t\t\t\t尊敬的闪工族用户：因注销账号行为不可逆，请务必认真阅读注销账号须知，当您点击下一步按钮时，表明您已清楚了解并愿意承担注销账号后的所有后果。"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_27"
            android:paddingTop="@dimen/dp_39"
            android:paddingBottom="@dimen/dp_29"
            android:paddingStart="@dimen/dp_30"
            android:paddingEnd="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_42"
            android:layout_marginEnd="@dimen/dp_42"
            android:background="@drawable/shape_white_radius_20">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textStyle="bold"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp_26"
                android:text="注销账号须知："/>

            <ImageView
                android:id="@+id/tv_tip1"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                app:layout_constraintTop_toTopOf="@+id/mTvTip1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/round_666666_radius_4"/>

            <TextView
                android:id="@+id/mTvTip1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                app:layout_constraintStart_toEndOf="@+id/tv_tip1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp_38"
                android:layout_marginStart="@dimen/dp_11"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp_26"
                android:text="注销账号后,您账号下的所有信息、数据将被清空，且不可恢复；"/>

            <ImageView
                android:id="@+id/tv_tip2"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                app:layout_constraintTop_toTopOf="@+id/mTvTip2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/round_666666_radius_4"/>

            <TextView
                android:id="@+id/mTvTip2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/mTvTip1"
                app:layout_constraintStart_toEndOf="@+id/tv_tip1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp_38"
                android:layout_marginStart="@dimen/dp_11"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp_26"
                android:text="注销前您须先处理完所有未完成的订单、投诉争议；"/>

            <ImageView
                android:id="@+id/tv_tip3"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                app:layout_constraintTop_toTopOf="@+id/mTvTip3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/round_666666_radius_4"/>

            <TextView
                android:id="@+id/mTvTip3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/mTvTip2"
                app:layout_constraintStart_toEndOf="@+id/tv_tip1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp_38"
                android:layout_marginStart="@dimen/dp_11"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp_26"
                android:text="注销后，您在闪工族平台注册的信息、您的聊天信息、信用等级、未领取的红包，奖励等将即时作废清除；"/>

            <ImageView
                android:id="@+id/tv_tip4"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                app:layout_constraintTop_toTopOf="@+id/mTvTip4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/round_666666_radius_4"/>

            <TextView
                android:id="@+id/mTvTip4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/mTvTip3"
                app:layout_constraintStart_toEndOf="@+id/tv_tip1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp_38"
                android:layout_marginStart="@dimen/dp_11"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp_26"
                android:text="若您已加入有公会，注销后，您将自动退出公会；若您是公会会长，请联系客服后完成注销，注销后，未到账、未领取的经费、奖励等将全部作废取消；"/>

            <ImageView
                android:id="@+id/tv_tip5"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                app:layout_constraintTop_toTopOf="@+id/mTvTip5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/round_666666_radius_4"/>

            <TextView
                android:id="@+id/mTvTip5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/mTvTip4"
                app:layout_constraintStart_toEndOf="@+id/tv_tip1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp_38"
                android:layout_marginStart="@dimen/dp_11"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp_26"
                android:text="注销成功15日后，您可凭手机号重新注册闪工族账户。"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/mTvNext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:layout_marginStart="@dimen/dp_42"
            android:layout_marginEnd="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_65"
            android:background="@drawable/shape_f7e047_radius_13"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:textSize="@dimen/dp_36"
            android:textColor="@color/color_333333"
            android:text="下一步"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

