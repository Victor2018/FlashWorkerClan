<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:paddingTop="@dimen/dp_28"
    android:paddingLeft="@dimen/dp_42"
    android:paddingRight="@dimen/dp_42"
    tools:ignore="MissingDefaultResource,ResourceName">

    <TextView
        android:id="@+id/tv_icon"
        android:layout_width="@dimen/dp_68"
        android:layout_height="@dimen/dp_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/round_ebba00_radius_34"
        android:gravity="center"
        android:textSize="@dimen/dp_32"
        android:textColor="@color/white"
        android:text="支"/>

    <TextView
        android:id="@+id/mTvBizName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tv_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dp_29"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_32"
        android:text="报酬支出"/>

    <TextView
        android:id="@+id/mTvBizDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/mTvBizName"
        app:layout_constraintEnd_toStartOf="@+id/mTvTradeAmount"
        app:layout_constraintTop_toBottomOf="@+id/mTvBizName"
        android:layout_marginTop="@dimen/dp_18"
        android:maxEms="12"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="深圳市千里马搬运有限公司"/>

    <TextView
        android:id="@+id/mTvTradeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/mTvBizName"
        app:layout_constraintTop_toBottomOf="@+id/mTvBizDesc"
        android:layout_marginTop="@dimen/dp_18"
        android:gravity="center"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="2020.12.22  20:05:41"/>

    <TextView
        android:id="@+id/mTvTradeAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mTvBizDesc"
        app:layout_constraintBottom_toBottomOf="@+id/mTvBizDesc"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_32"
        android:text="-200.00"/>

    <View
        android:id="@+id/line_space"
        style="@style/base_line_horizontal"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvTradeTime"
        android:layout_marginTop="@dimen/dp_28"/>

</androidx.constraintlayout.widget.ConstraintLayout>