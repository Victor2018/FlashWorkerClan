<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mClExpel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_45"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_white_radius_20"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_32"
        android:text="请输入兑换码"/>

    <EditText
        android:id="@+id/mEtCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_83"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_marginTop="@dimen/dp_49"
        android:layout_marginStart="@dimen/dp_21"
        android:layout_marginEnd="@dimen/dp_21"
        android:paddingLeft="@dimen/dp_21"
        android:paddingRight="@dimen/dp_21"
        android:background="@drawable/border_999999_radius_5"
        android:gravity="center_vertical"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="@dimen/dp_28"
        android:textColorHint="@color/color_999999"
        android:textColor="@color/color_333333"
        android:hint="请输入兑换码"/>

    <View
        android:id="@+id/line_code"
        style="@style/base_line_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/mEtCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_21"
        android:layout_marginEnd="@dimen/dp_21"/>

    <TextView
        android:id="@+id/mTvCancel"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/line_cancel"
        app:layout_constraintTop_toBottomOf="@+id/line_code"
        android:gravity="center"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_666666"
        android:text="取消"/>

    <View
        android:id="@+id/line_cancel"
        style="@style/base_line_vertical"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintTop_toTopOf="@+id/mTvCancel"
        app:layout_constraintBottom_toBottomOf="@+id/mTvCancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dp_21"
        android:layout_marginEnd="@dimen/dp_21"/>

    <TextView
        android:id="@+id/mTvConfirm"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_109"
        app:layout_constraintStart_toEndOf="@+id/line_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_code"
        android:gravity="center"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_F7A730"
        android:text="确定"/>

</androidx.constraintlayout.widget.ConstraintLayout>




