<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_28"
    android:paddingLeft="@dimen/dp_42"
    android:paddingRight="@dimen/dp_42"
    tools:ignore="MissingDefaultResource,ResourceName">

    <TextView
        android:id="@+id/mTvBizName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_32"
        android:text="雇用支出"/>

    <TextView
        android:id="@+id/mTvBizDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mTvTradeAmount"
        app:layout_constraintTop_toBottomOf="@+id/mTvBizName"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_18"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="王大锤"/>

    <TextView
        android:id="@+id/mTvTradeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvBizDesc"
        android:layout_marginTop="@dimen/dp_18"
        android:gravity="center"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="2020.12.22  20:05:41"/>

    <TextView
        android:id="@+id/mTvTradeAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mTvBizDesc"
        app:layout_constraintBottom_toBottomOf="@+id/mTvBizDesc"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_32"
        android:text="200.00"/>


    <View style="@style/base_line_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvTradeTime"
        android:layout_marginTop="@dimen/dp_28"/>

</androidx.constraintlayout.widget.ConstraintLayout>