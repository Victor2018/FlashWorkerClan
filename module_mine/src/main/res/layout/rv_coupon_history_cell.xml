<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_13"
    android:layout_marginStart="@dimen/dp_21"
    android:layout_marginEnd="@dimen/dp_21"
    android:background="@drawable/shape_white_radius_16"
    android:paddingStart="@dimen/dp_21"
    android:paddingEnd="@dimen/dp_21"
    tools:ignore="MissingDefaultResource,ResourceName">

    <TextView
        android:id="@+id/mTvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="@dimen/dp_57"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_36"
        android:text="艾米体育场馆代金券"/>

    <TextView
        android:id="@+id/mTvExpireTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvName"
        android:layout_marginTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_57"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_28"
        android:text="2021.9.28  到期"/>

    <com.flash.worker.lib.common.view.widget.DotLineView
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/mTvName"
        app:layout_constraintBottom_toBottomOf="@+id/mTvExpireTime"
        app:layout_constraintEnd_toStartOf="@+id/mTvStatus"
        android:layout_marginEnd="@dimen/dp_60"
        android:layerType="software"
        app:dashGap="@dimen/dp_5"
        app:dashLength="@dimen/dp_5"
        app:dashThickness="@dimen/dp_1"
        app:divider_line_color="@color/color_999999"
        app:divider_orientation="vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/mTvAmount"
        app:layout_constraintEnd_toStartOf="@+id/mTvAmount"
        android:layout_marginEnd="@dimen/dp_5"
        android:textStyle="bold"
        android:textSize="@dimen/dp_32"
        android:textColor="@color/color_999999"
        android:text="￥"/>

    <TextView
        android:id="@+id/mTvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mTvName"
        app:layout_constraintEnd_toEndOf="@+id/mTvStatus"
        android:textStyle="bold"
        android:textSize="@dimen/dp_70"
        android:textColor="@color/color_999999"
        android:text="25"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/mTvStatus"
        app:layout_constraintEnd_toEndOf="@+id/mTvStatus"
        app:layout_constraintBottom_toTopOf="@+id/mTvStatus"
        android:layout_marginBottom="@dimen/dp_13"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_24"
        android:text="代金券"/>

    <TextView
        android:id="@+id/mTvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_aaaaaa_radius_5"
        android:layout_marginBottom="@dimen/dp_21"
        android:layout_marginEnd="@dimen/dp_34"
        android:paddingTop="@dimen/dp_7"
        android:paddingBottom="@dimen/dp_7"
        android:paddingStart="@dimen/dp_21"
        android:paddingEnd="@dimen/dp_21"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/white"
        android:text="使用"/>


</androidx.constraintlayout.widget.ConstraintLayout>