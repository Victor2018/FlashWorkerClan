<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_6"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_28"
    android:paddingBottom="@dimen/dp_28"
    android:paddingLeft="@dimen/dp_42"
    android:paddingRight="@dimen/dp_42"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/mTvCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_28"
        android:text="深圳计算有限公司(企业)"/>

    <ImageView
        android:id="@+id/mIvCompanyVerified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/mTvCompany"
        app:layout_constraintTop_toTopOf="@+id/mTvCompany"
        app:layout_constraintBottom_toBottomOf="@+id/mTvCompany"
        android:src="@mipmap/ic_company_verified"
        android:layout_marginLeft="@dimen/dp_20"/>

    <TextView
        android:id="@+id/mTvDisputeType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/mTvCompany"
        android:textStyle="bold"
        android:textColor="@color/color_3464D1"
        android:textSize="@dimen/dp_24"
        android:text="我的举报"/>

    <TextView
        android:id="@+id/mTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mTvCompany"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_22"
        android:drawableLeft="@mipmap/ic_task_lable"
        android:drawablePadding="@dimen/dp_15"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_24"
        android:text="java开发工程师"/>

    <TextView
        android:id="@+id/mTvMessage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintTop_toBottomOf="@+id/mTvTitle"
        android:layout_marginTop="@dimen/dp_27"
        android:background="@drawable/border_dddddd_radius_3"
        android:paddingLeft="@dimen/dp_13"
        android:gravity="center_vertical"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_999999"
        android:text="雇主回复中！"/>

    <TextView
        android:id="@+id/mTvDelete"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/border_f7a730_radius_27"
        app:layout_constraintRight_toLeftOf="@+id/mTvHandleDetail"
        app:layout_constraintTop_toTopOf="@+id/mTvHandleDetail"
        android:layout_marginRight="@dimen/dp_26"
        android:gravity="center"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_F7A730"
        android:visibility="gone"
        android:text="删除记录"/>

    <TextView
        android:id="@+id/mTvCancel"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/border_f7a730_radius_27"
        app:layout_constraintRight_toLeftOf="@+id/mTvHandleDetail"
        app:layout_constraintTop_toTopOf="@+id/mTvHandleDetail"
        android:layout_marginRight="@dimen/dp_26"
        android:gravity="center"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_F7A730"
        android:text="取消举报"/>

    <TextView
        android:id="@+id/mTvHandleDetail"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/border_f7a730_radius_27"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvMessage"
        android:layout_marginTop="@dimen/dp_27"
        android:gravity="center"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_F7A730"
        android:text="处理详情"/>

</androidx.constraintlayout.widget.ConstraintLayout>