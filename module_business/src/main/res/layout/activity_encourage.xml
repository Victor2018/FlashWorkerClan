<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:fitsSystemWindows="true"
    tools:ignore="ResourceName">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/mCtlWebTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:titleEnabled="false">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/transparent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="@string/app_name">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_30">
                    <ImageView
                        android:id="@+id/mIvBack"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_20"
                        android:src="@mipmap/ic_back"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/dp_10"
                        android:textSize="@dimen/dp_36"
                        android:textColor="@color/color_333333"
                        android:text="以资鼓励"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp_42"
        android:paddingRight="@dimen/dp_42"
        android:paddingTop="@dimen/dp_40"
        android:paddingBottom="@dimen/dp_100"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/tv_reward_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_36"
            android:textStyle="bold"
            android:text="奖励："/>

        <TextView
            android:id="@+id/mTvRewardAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/tv_reward_amount_unit"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_reward_amount"
            android:layout_marginEnd="@dimen/dp_5"
            android:textStyle="bold"
            android:textColor="@color/color_E26853"
            android:textSize="@dimen/dp_36"
            tools:text="50.00"/>

        <TextView
            android:id="@+id/tv_reward_amount_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_reward_amount"
            android:textStyle="bold"
            android:textColor="@color/color_E26853"
            android:textSize="@dimen/dp_24"
            android:text="元"/>

        <TextView
            android:id="@+id/tv_service_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_reward_amount"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dp_62"
            android:textStyle="bold"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_36"
            tools:text="平台服务费(3%)："/>

        <TextView
            android:id="@+id/mTvServiceAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/tv_service_amount_unit"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_service_amount"
            android:layout_marginEnd="@dimen/dp_5"
            android:textStyle="bold"
            android:textColor="@color/color_E26853"
            android:textSize="@dimen/dp_36"
            tools:text="1.5"/>

        <TextView
            android:id="@+id/tv_service_amount_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_service_amount"
            android:textStyle="bold"
            android:textColor="@color/color_E26853"
            android:textSize="@dimen/dp_24"
            android:text="元"/>

        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/mTvTotalAmount"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_total_amount_unit"
            android:layout_marginEnd="@dimen/dp_5"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_24"
            android:text="共计："/>

        <TextView
            android:id="@+id/mTvTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/tv_total_amount_unit"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_total_amount_unit"
            android:layout_marginEnd="@dimen/dp_5"
            android:textStyle="bold"
            android:textColor="@color/color_E26853"
            android:textSize="@dimen/dp_36"
            tools:text="51.5"/>

        <TextView
            android:id="@+id/tv_total_amount_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_service_amount"
            android:layout_marginTop="@dimen/dp_72"
            android:textStyle="bold"
            android:textColor="@color/color_E26853"
            android:textSize="@dimen/dp_24"
            android:text="元"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/mTvBalanceAmount"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_balance_unit"
            android:layout_marginEnd="@dimen/dp_5"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_24"
            android:text="可用余额："/>

        <TextView
            android:id="@+id/mTvBalanceAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/tv_balance_unit"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_balance_unit"
            android:layout_marginEnd="@dimen/dp_5"
            android:textStyle="bold"
            android:textColor="@color/color_E26853"
            android:textSize="@dimen/dp_36"
            tools:text="100.00"/>

        <TextView
            android:id="@+id/tv_balance_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_amount"
            android:layout_marginTop="@dimen/dp_199"
            android:textStyle="bold"
            android:textColor="@color/color_E26853"
            android:textSize="@dimen/dp_24"
            android:text="元"/>

        <TextView
            android:id="@+id/tv_tip_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/dp_160"
            android:paddingLeft="@dimen/dp_82"
            android:paddingRight="@dimen/dp_82"
            android:gravity="center"
            android:textSize="@dimen/dp_24"
            android:textColor="@color/color_999999"
            android:text="温馨提示：\n奖励与服务费支付后，先进入冻结账户，在结算报酬时，再一并结算给人才和平台！"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/mTvConfimReward"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:background="@color/color_F7E047"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:textSize="@dimen/dp_32"
        android:textColor="@color/color_333333"
        android:textAllCaps="false"
        android:text="确认奖励"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>