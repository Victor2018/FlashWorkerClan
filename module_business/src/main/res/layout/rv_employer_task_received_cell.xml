<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_40"
    android:paddingLeft="@dimen/dp_42"
    android:paddingRight="@dimen/dp_42"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    tools:ignore="MissingDefaultResource,ResourceName">

    <CheckBox
        android:id="@+id/mChkCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mCivAvatar"
        app:layout_constraintBottom_toBottomOf="@+id/mCivAvatar"
        android:button="@drawable/chk_talent_employer_selector"/>

    <com.flash.worker.lib.common.view.widget.ShapedImageView
        android:id="@+id/mCivAvatar"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintStart_toEndOf="@+id/mChkCheck"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_avatar"
        android:scaleType="centerCrop"
        app:shape_mode="circle"
        app:stroke_color="@color/white"
        app:stroke_width="@dimen/dp_2"/>

    <TextView
        android:id="@+id/mTvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/mCivAvatar"
        app:layout_constraintTop_toTopOf="@+id/mCivAvatar"
        android:layout_marginStart="@dimen/dp_27"
        android:maxEms="4"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_32"
        tools:text="王大锤"/>

    <TextView
        android:id="@+id/mTvUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/mTvUserName"
        app:layout_constraintBaseline_toBaselineOf="@+id/mTvUserName"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_24"
        tools:text="(ID:12584963)"/>

    <TextView
        android:id="@+id/mTvPrepaidAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/mTvUserName"
        android:textStyle="bold"
        android:textColor="@color/color_E26853"
        android:textSize="@dimen/dp_24"
        tools:text="已预付：5.00元"/>

    <TextView
        android:id="@+id/mTvSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/mTvUserName"
        app:layout_constraintTop_toBottomOf="@+id/mTvUserName"
        android:layout_marginTop="@dimen/dp_25"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        tools:text="男"/>

    <View
        android:id="@+id/line_sex"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_23"
        app:layout_constraintStart_toEndOf="@+id/mTvSex"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        app:layout_constraintBottom_toBottomOf="@+id/mTvSex"
        android:layout_marginStart="@dimen/dp_21"
        android:background="@color/color_999999"/>

    <TextView
        android:id="@+id/mTvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/line_sex"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        android:layout_marginStart="@dimen/dp_21"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        tools:text="24岁"/>

    <TextView
        android:id="@+id/mTvReceiveCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        tools:text="领取1件"/>

    <TextView
        android:id="@+id/mTvSubmitTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvSex"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        tools:text="提交任务截止时间：12-2-14:30"/>

    <ImageView
        android:id="@+id/mIvMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mTvContactTalent"
        app:layout_constraintBottom_toBottomOf="@+id/mTvContactTalent"
        android:padding="@dimen/dp_20"
        android:src="@mipmap/ic_gray_more"/>

    <TextView
        android:id="@+id/mTvContactTalent"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/border_f7a730_radius_27"
        app:layout_constraintEnd_toStartOf="@+id/mTvSettlement"
        app:layout_constraintTop_toTopOf="@+id/mTvSettlement"
        android:layout_marginEnd="@dimen/dp_24"
        android:gravity="center"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_F7A730"
        android:text="联系人才"/>

    <TextView
        android:id="@+id/mTvSettlement"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/border_f7a730_radius_27"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvSubmitTime"
        android:layout_marginTop="@dimen/dp_38"
        android:gravity="center"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_F7A730"
        android:text="结算"/>

    <View
        style="@style/base_line_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/mTvContactTalent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_40"/>

</androidx.constraintlayout.widget.ConstraintLayout>