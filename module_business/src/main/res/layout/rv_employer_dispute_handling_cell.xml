<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_28"
    tools:ignore="ResourceName">

    <View
        android:id="@+id/line_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/color_F9F9F9"/>

    <com.flash.worker.lib.common.view.widget.ShapedImageView
        android:id="@+id/mCivAvatar"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_space"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginStart="@dimen/dp_42"
        android:src="@mipmap/ic_avatar"
        android:scaleType="centerCrop"
        app:shape_mode="circle"
        app:stroke_color="@color/white"
        app:stroke_width="@dimen/dp_2"/>

    <TextView
        android:id="@+id/mTvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/mCivAvatar"
        app:layout_constraintTop_toTopOf="@+id/mCivAvatar"
        android:layout_marginStart="@dimen/dp_27"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_32"
        android:text="是王大锤"/>

    <TextView
        android:id="@+id/mTvUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/mTvUserName"
        app:layout_constraintBaseline_toBaselineOf="@+id/mTvUserName"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_24"
        android:text="(ID:12584963)"/>

    <TextView
        android:id="@+id/mTvSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/mTvUserName"
        app:layout_constraintTop_toBottomOf="@+id/mTvUserName"
        android:layout_marginTop="@dimen/dp_25"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        android:text="男"/>

    <View
        android:id="@+id/line_sex"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_23"
        app:layout_constraintStart_toEndOf="@+id/mTvSex"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        app:layout_constraintBottom_toBottomOf="@+id/mTvSex"
        android:layout_marginStart="@dimen/dp_21"
        android:background="@color/color_999999"/>

    <TextView
        android:id="@+id/mTvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/line_sex"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        android:layout_marginStart="@dimen/dp_21"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        android:text="24岁"/>

    <TextView
        android:id="@+id/mTvIdentity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/mTvAge"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        android:layout_marginStart="@dimen/dp_34"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        android:text="学生"/>

    <View
        android:id="@+id/view_employ_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_127"
        android:background="@drawable/shape_f9f9f9_radius_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvSex"
        android:layout_marginStart="@dimen/dp_42"
        android:layout_marginEnd="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_30"/>

    <TextView
        android:id="@+id/mTvCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_25"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_24"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/view_employ_bg"
        app:layout_constraintTop_toTopOf="@+id/view_employ_bg"
        android:text="深圳计算有限公司" />

    <ImageView
        android:id="@+id/mIvCompanyVerified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:src="@mipmap/ic_company_verified"
        app:layout_constraintBottom_toBottomOf="@+id/mTvCompany"
        app:layout_constraintLeft_toRightOf="@+id/mTvCompany"
        app:layout_constraintTop_toTopOf="@+id/mTvCompany" />

    <TextView
        android:id="@+id/mTvDisputeType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mTvUserName"
        app:layout_constraintBaseline_toBaselineOf="@+id/mTvUserName"
        android:layout_marginEnd="@dimen/dp_42"
        android:textStyle="bold"
        android:textColor="@color/color_3464D1"
        android:textSize="@dimen/dp_24"
        android:text="我的投诉"/>

    <TextView
        android:id="@+id/mTvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_25"
        android:drawableLeft="@mipmap/ic_job_lable"
        android:drawablePadding="@dimen/dp_15"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_24"
        app:layout_constraintBottom_toBottomOf="@+id/view_employ_bg"
        app:layout_constraintStart_toStartOf="@+id/mTvCompany"
        app:layout_constraintEnd_toStartOf="@+id/mTvWorkDate"
        android:text="java开发工程师" />

    <TextView
        android:id="@+id/mTvWorkDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_21"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_24"
        app:layout_constraintEnd_toEndOf="@+id/view_employ_bg"
        app:layout_constraintTop_toTopOf="@+id/mTvTitle"
        android:text="12.29 - 01.01" />

    <TextView
        android:id="@+id/mTvMessage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintTop_toBottomOf="@+id/view_employ_bg"
        android:layout_marginTop="@dimen/dp_27"
        android:background="@drawable/border_dddddd_radius_3"
        android:layout_marginStart="@dimen/dp_42"
        android:layout_marginEnd="@dimen/dp_42"
        android:paddingLeft="@dimen/dp_13"
        android:gravity="center_vertical"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_999999"
        android:text="雇主回复中！"/>

    <TextView
        android:id="@+id/mTvDelete"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/border_f7a730_radius_27"
        app:layout_constraintRight_toLeftOf="@+id/mTvHandleDetail"
        app:layout_constraintTop_toTopOf="@+id/mTvHandleDetail"
        android:layout_marginRight="@dimen/dp_26"
        android:gravity="center"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_F7A730"
        android:visibility="gone"
        android:text="删除记录"/>

    <TextView
        android:id="@+id/mTvCancel"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/border_f7a730_radius_27"
        app:layout_constraintRight_toLeftOf="@+id/mTvHandleDetail"
        app:layout_constraintTop_toTopOf="@+id/mTvHandleDetail"
        android:layout_marginRight="@dimen/dp_26"
        android:gravity="center"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_F7A730"
        android:text="取消投诉"/>

    <TextView
        android:id="@+id/mTvHandleDetail"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/border_f7a730_radius_27"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvMessage"
        android:layout_marginTop="@dimen/dp_27"
        android:layout_marginEnd="@dimen/dp_42"
        android:gravity="center"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_F7A730"
        android:text="处理详情"/>

</androidx.constraintlayout.widget.ConstraintLayout>