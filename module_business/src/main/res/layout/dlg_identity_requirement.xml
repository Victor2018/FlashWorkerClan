<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dlg_city_picker"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/mTvCancel"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_106"
        android:gravity="center"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_666666"
        android:text="取消"/>
    <TextView
        android:id="@+id/mTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_106"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_32"
        android:text="身份要求"/>
    <TextView
        android:id="@+id/mTvConfirm"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_106"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_F7A730"
        android:text="确定"/>
    <View style="@style/base_line_horizontal"
        android:layout_below="@+id/mTvTitle"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginRight="@dimen/dp_21"/>

    <cn.carbswang.android.numberpickerview.library.NumberPickerView
        android:id="@+id/mIdentityPicker"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_510"
        android:layout_below="@+id/mTvTitle"
        android:paddingLeft="@dimen/dp_43"
        android:paddingRight="@dimen/dp_43"
        app:npv_DividerColor="@color/color_CCCCCC"
        app:npv_HintText=""
        app:npv_ShownCount="5"
        app:npv_TextColorNormal="@color/color_666666"
        app:npv_TextColorSelected="@color/color_333333"
        app:npv_TextSizeNormal="@dimen/dp_28"
        app:npv_TextSizeSelected="@dimen/dp_32"/>
</RelativeLayout>