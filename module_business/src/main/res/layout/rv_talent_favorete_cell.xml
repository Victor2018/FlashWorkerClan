<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/dp_42"
    android:paddingRight="@dimen/dp_42"
    android:paddingTop="@dimen/dp_28"
    android:paddingBottom="@dimen/dp_28"
    android:layout_marginTop="@dimen/dp_6"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    tools:ignore="ResourceName">

    <com.flash.worker.lib.common.view.widget.ShapedImageView
        android:id="@+id/mCivAvatar"
        android:layout_width="@dimen/dp_93"
        android:layout_height="@dimen/dp_93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_avatar"
        android:scaleType="centerCrop"
        app:shape_mode="circle"
        app:stroke_color="@color/white"
        app:stroke_width="@dimen/dp_2"/>

    <TextView
        android:id="@+id/mTvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/mCivAvatar"
        app:layout_constraintEnd_toStartOf="@+id/mTvUnitPrice"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_21"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_32"
        tools:text="JAVA工程师"/>

    <TextView
        android:id="@+id/mTvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/mTvTitle"
        app:layout_constraintTop_toBottomOf="@+id/mTvTitle"
        android:layout_marginTop="@dimen/dp_10"
        android:textStyle="bold"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_333333"
        tools:text="王大锤"/>

    <TextView
        android:id="@+id/mTvSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/mTvUserName"
        app:layout_constraintTop_toTopOf="@+id/mTvUserName"
        app:layout_constraintBottom_toBottomOf="@+id/mTvUserName"
        android:layout_marginLeft="@dimen/dp_25"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        tools:text="男"/>

    <View
        android:id="@+id/line_sex"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_23"
        android:background="@color/color_999999"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        app:layout_constraintBottom_toBottomOf="@+id/mTvSex"
        app:layout_constraintLeft_toRightOf="@+id/mTvSex"
        android:layout_marginLeft="@dimen/dp_8"/>

    <TextView
        android:id="@+id/mTvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        app:layout_constraintBottom_toBottomOf="@+id/mTvSex"
        app:layout_constraintLeft_toRightOf="@+id/line_sex"
        android:layout_marginLeft="@dimen/dp_8"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        tools:text="24岁"/>

    <TextView
        android:id="@+id/mTvWorkYears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/mTvUserName"
        app:layout_constraintTop_toBottomOf="@+id/mTvUserName"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        tools:text="1-3年"/>

    <View
        android:id="@+id/line_work_years"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_23"
        android:background="@color/color_999999"
        app:layout_constraintTop_toTopOf="@+id/mTvWorkYears"
        app:layout_constraintBottom_toBottomOf="@+id/mTvWorkYears"
        app:layout_constraintLeft_toRightOf="@+id/mTvWorkYears"
        android:layout_marginLeft="@dimen/dp_8"/>

    <TextView
        android:id="@+id/mTvEducation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mTvWorkYears"
        app:layout_constraintBottom_toBottomOf="@+id/mTvWorkYears"
        app:layout_constraintLeft_toRightOf="@+id/line_work_years"
        android:layout_marginLeft="@dimen/dp_8"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        tools:text="本科"/>

    <TextView
        android:id="@+id/mTvHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mTvWorkYears"
        app:layout_constraintBottom_toBottomOf="@+id/mTvWorkYears"
        app:layout_constraintLeft_toRightOf="@+id/mTvEducation"
        android:layout_marginLeft="@dimen/dp_33"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        tools:text="197cm"/>

    <View
        android:id="@+id/line_height"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_23"
        android:background="@color/color_999999"
        app:layout_constraintTop_toTopOf="@+id/mTvWorkYears"
        app:layout_constraintBottom_toBottomOf="@+id/mTvWorkYears"
        app:layout_constraintLeft_toRightOf="@+id/mTvHeight"
        android:layout_marginLeft="@dimen/dp_8"/>

    <TextView
        android:id="@+id/mTvWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mTvWorkYears"
        app:layout_constraintBottom_toBottomOf="@+id/mTvWorkYears"
        app:layout_constraintLeft_toRightOf="@+id/line_height"
        android:layout_marginLeft="@dimen/dp_8"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        tools:text="58kg"/>

    <TextView
        android:id="@+id/mTvUnitPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mTvTitle"
        app:layout_constraintBottom_toBottomOf="@+id/mTvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/color_E26853"
        android:textSize="@dimen/dp_28"
        tools:text="200元/小时"/>

    <com.flash.worker.lib.common.view.widget.FlowLayout
        android:id="@+id/mFlQualification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvWorkYears"
        android:layout_marginTop="@dimen/dp_27"
        app:flChildSpacing="@dimen/dp_13"
        app:flChildSpacingForLastRow="align"
        app:flRowSpacing="@dimen/dp_13"/>

    <View
        android:id="@+id/line_qualification"
        style="@style/base_line_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/mFlQualification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_27"/>

    <TextView
        android:id="@+id/mTvServiceArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_qualification"
        android:layout_marginTop="@dimen/dp_27"
        android:drawableLeft="@mipmap/ic_empty_location"
        android:drawablePadding="@dimen/dp_13"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_999999"
        tools:text="南山区、宝安区、福田区"/>

    <TextView
        android:id="@+id/mTvGuild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mTvWorkYears"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_27"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:background="@drawable/shape_26ffd424_radius_7"
        android:gravity="center"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_A1840C"
        tools:text="海豚公会"/>

    <TextView
        android:id="@+id/mTvTalentCreditScore"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_34"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mTvAge"
        app:layout_constraintBottom_toBottomOf="@+id/mTvAge"
        android:background="@drawable/shape_gradient_feffeda4_ffd424_radius_17"
        android:paddingStart="@dimen/dp_48"
        android:paddingEnd="@dimen/dp_15"
        android:gravity="center"
        android:textColor="@color/color_816800"
        android:textSize="@dimen/dp_20"
        android:text="信用分: 0"/>

    <TextView
        android:id="@+id/tv_talent_credit_score"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintStart_toStartOf="@+id/mTvTalentCreditScore"
        app:layout_constraintTop_toTopOf="@+id/mTvTalentCreditScore"
        app:layout_constraintBottom_toBottomOf="@+id/mTvTalentCreditScore"
        android:background="@drawable/round_border_feffeda4_ffd424_radius_20"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_talent_credit_score"
        app:layout_constraintEnd_toEndOf="@+id/tv_talent_credit_score"
        app:layout_constraintTop_toTopOf="@+id/tv_talent_credit_score"
        app:layout_constraintBottom_toBottomOf="@+id/tv_talent_credit_score"
        android:src="@mipmap/ic_home_credit_score"/>

</androidx.constraintlayout.widget.ConstraintLayout>

