<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_40"
    android:paddingLeft="@dimen/dp_42"
    android:paddingRight="@dimen/dp_42"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    tools:ignore="ResourceName">


    <CheckBox
        android:id="@+id/mChkCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mCivAvatar"
        app:layout_constraintBottom_toBottomOf="@+id/mCivAvatar"
        android:button="@drawable/chk_talent_employer_selector"/>

    <com.flash.worker.lib.common.view.widget.ShapedImageView
        android:id="@+id/mCivAvatar"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintStart_toEndOf="@+id/mChkCheck"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_avatar"
        android:scaleType="centerCrop"
        app:shape_mode="circle"
        app:stroke_color="@color/white"
        app:stroke_width="@dimen/dp_2"/>

    <TextView
        android:id="@+id/mTvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/mCivAvatar"
        app:layout_constraintTop_toTopOf="@+id/mCivAvatar"
        android:layout_marginStart="@dimen/dp_27"
        android:maxEms="4"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_32"
        tools:text="是王大锤"/>

    <TextView
        android:id="@+id/mTvUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/mTvUserName"
        app:layout_constraintBaseline_toBaselineOf="@+id/mTvUserName"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_24"
        tools:text="(ID:12584963)"/>

    <TextView
        android:id="@+id/mTvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/mTvUserName"
        android:textStyle="bold"
        android:textColor="@color/color_E26853"
        android:textSize="@dimen/dp_24"
        tools:text="已完工"/>

    <TextView
        android:id="@+id/mTvSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/mTvUserName"
        app:layout_constraintTop_toBottomOf="@+id/mTvUserName"
        android:layout_marginTop="@dimen/dp_25"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        tools:text="男"/>

    <View
        android:id="@+id/line_sex"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_23"
        app:layout_constraintStart_toEndOf="@+id/mTvSex"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        app:layout_constraintBottom_toBottomOf="@+id/mTvSex"
        android:layout_marginStart="@dimen/dp_21"
        android:background="@color/color_999999"/>

    <TextView
        android:id="@+id/mTvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/line_sex"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        android:layout_marginStart="@dimen/dp_21"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        tools:text="24岁"/>

    <TextView
        android:id="@+id/mTvIdentity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/mTvAge"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        android:layout_marginStart="@dimen/dp_34"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        tools:text="学生"/>

    <TextView
        android:id="@+id/mTvHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/mTvIdentity"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        android:layout_marginStart="@dimen/dp_27"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        tools:text="179cm"/>

    <View
        android:id="@+id/line_height"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_23"
        app:layout_constraintStart_toEndOf="@+id/mTvHeight"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        app:layout_constraintBottom_toBottomOf="@+id/mTvSex"
        android:layout_marginStart="@dimen/dp_21"
        android:background="@color/color_999999"/>

    <TextView
        android:id="@+id/mTvWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/line_height"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        android:layout_marginStart="@dimen/dp_27"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        tools:text="58kg"/>

    <View
        android:id="@+id/view_total_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_190"
        app:layout_constraintTop_toBottomOf="@+id/mTvSex"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_27"
        android:background="@drawable/shape_f9f9f9_radius_7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/mTvRewardAmount"
        app:layout_constraintTop_toTopOf="@+id/mTvRewardAmount"
        android:layout_marginEnd="@dimen/dp_5"
        android:textColor="@color/color_E26853"
        android:textSize="@dimen/dp_24"
        android:text="奖励:"/>

    <TextView
        android:id="@+id/mTvRewardAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/view_total_bg"
        app:layout_constraintTop_toTopOf="@+id/view_total_bg"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_28"
        android:textStyle="bold"
        android:textColor="@color/color_E26853"
        android:textSize="@dimen/dp_24"
        tools:text="50.00元"/>

    <View
        android:id="@+id/line_reward"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_DDDDDD"
        app:layout_constraintTop_toBottomOf="@+id/mTvRewardAmount"
        app:layout_constraintStart_toStartOf="@+id/view_total_bg"
        app:layout_constraintEnd_toEndOf="@id/view_total_bg"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginStart="@dimen/dp_28"
        android:layout_marginEnd="@dimen/dp_28"/>

    <TextView
        android:id="@+id/mTvPrepaid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line_reward"
        app:layout_constraintStart_toStartOf="@+id/view_total_bg"
        app:layout_constraintEnd_toStartOf="@+id/mTvSettled"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="@dimen/dp_26"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_24"
        tools:text="0.00元"/>
    <TextView
        android:id="@+id/mTvSettled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mTvPrepaid"
        app:layout_constraintEnd_toStartOf="@+id/mTvTotalSettlement"
        app:layout_constraintStart_toEndOf="@+id/mTvPrepaid"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_24"
        tools:text="0.00元"/>
    <TextView
        android:id="@+id/mTvTotalSettlement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mTvPrepaid"
        app:layout_constraintEnd_toEndOf="@+id/view_total_bg"
        app:layout_constraintStart_toEndOf="@+id/mTvSettled"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_24"
        tools:text="200.00元"/>

    <TextView
        android:id="@+id/tv_prepaid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view_total_bg"
        app:layout_constraintStart_toStartOf="@+id/view_total_bg"
        app:layout_constraintEnd_toStartOf="@+id/tv_settled"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="已预付"/>

    <TextView
        android:id="@+id/tv_settled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_prepaid"
        app:layout_constraintEnd_toStartOf="@+id/tv_total_settlement"
        app:layout_constraintStart_toEndOf="@+id/tv_prepaid"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="已结算"/>
    <TextView
        android:id="@+id/tv_total_settlement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_prepaid"
        app:layout_constraintEnd_toEndOf="@+id/view_total_bg"
        app:layout_constraintStart_toEndOf="@+id/tv_settled"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="结算合计"/>

    <View android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_67"
        android:background="@color/color_DDDDDD"
        app:layout_constraintStart_toEndOf="@+id/mTvPrepaid"
        app:layout_constraintTop_toTopOf="@+id/line_reward"
        app:layout_constraintBottom_toBottomOf="@+id/view_total_bg"/>

    <View android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_67"
        android:background="@color/color_DDDDDD"
        app:layout_constraintStart_toEndOf="@+id/mTvSettled"
        app:layout_constraintTop_toTopOf="@+id/line_reward"
        app:layout_constraintBottom_toBottomOf="@+id/view_total_bg"/>

    <TextView
        android:id="@+id/mTvJobOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_total_bg"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_27"
        android:drawableRight="@mipmap/ic_user_id_copy"
        android:drawablePadding="@dimen/dp_19"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        tools:text="工单号：12369745896321478523698521"/>

    <ImageView
        android:id="@+id/mIvMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mTvContactEmployer"
        app:layout_constraintBottom_toBottomOf="@+id/mTvContactEmployer"
        android:padding="@dimen/dp_20"
        android:src="@mipmap/ic_gray_more"/>

    <TextView
        android:id="@+id/mTvReward"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/border_f7a730_radius_27"
        app:layout_constraintEnd_toStartOf="@+id/mTvContactEmployer"
        app:layout_constraintTop_toTopOf="@+id/mTvPayment"
        android:layout_marginEnd="@dimen/dp_24"
        android:gravity="center"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_F7A730"
        android:text="奖励"/>

    <TextView
        android:id="@+id/mTvContactEmployer"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/border_f7a730_radius_27"
        app:layout_constraintEnd_toStartOf="@+id/mTvPayment"
        app:layout_constraintTop_toTopOf="@+id/mTvPayment"
        android:layout_marginEnd="@dimen/dp_24"
        android:gravity="center"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_F7A730"
        android:text="联系人才"/>

    <TextView
        android:id="@+id/mTvPayment"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/border_f7a730_radius_27"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvJobOrderId"
        android:layout_marginTop="@dimen/dp_38"
        android:gravity="center"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_F7A730"
        android:text="结算"/>

    <View
        style="@style/base_line_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/mTvContactEmployer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_40"/>

</androidx.constraintlayout.widget.ConstraintLayout>