<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_30"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_dlg_city_picker"
    tools:ignore="MissingDefaultResource,ResourceName">

    <TextView
        android:id="@+id/mTvRequireMarginPayment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:gravity="center"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:textSize="@dimen/dp_32"
        android:textColor="@color/color_333333"
        android:text="要求保证金赔付"/>

    <View style="@style/base_line_horizontal"/>

    <TextView
        android:id="@+id/mTvRequireSettlementSalary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:gravity="center"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:textSize="@dimen/dp_32"
        android:textColor="@color/color_333333"
        android:text="要求结算雇主已预付报酬"/>

</LinearLayout>