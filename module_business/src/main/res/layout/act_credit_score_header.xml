<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mCvFrozenFlow"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_613"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.9"
    android:fitsSystemWindows="true"
    tools:ignore="ResourceName">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/img_credit_header"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.9"
        android:fitsSystemWindows="true"/>

    <ImageView
        android:id="@+id/iv_credit_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_100"
        android:src="@mipmap/img_credit_score_header"
        android:layout_gravity="center|bottom"/>

    <TextView
        android:id="@+id/mTvCreditScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/iv_credit_header"
        app:layout_constraintEnd_toEndOf="@+id/iv_credit_header"
        app:layout_constraintBottom_toTopOf="@+id/tv_credit_score"
        android:textStyle="bold"
        android:textSize="@dimen/dp_72"
        android:textColor="@color/color_333333"
        tools:text="130"/>

    <TextView
        android:id="@+id/tv_credit_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_credit_header"
        app:layout_constraintEnd_toEndOf="@+id/iv_credit_header"
        android:layout_marginBottom="@dimen/dp_120"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_999999"
        android:text="累计人才信用"/>

</androidx.constraintlayout.widget.ConstraintLayout>