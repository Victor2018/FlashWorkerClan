<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_6"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_28"
    android:paddingBottom="@dimen/dp_28"
    android:paddingLeft="@dimen/dp_42"
    android:paddingRight="@dimen/dp_42"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/mTvCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_28"
        tools:text="深圳计算有限公司"/>

    <ImageView
        android:id="@+id/mIvCompanyVerified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/mTvCompany"
        app:layout_constraintTop_toTopOf="@+id/mTvCompany"
        app:layout_constraintBottom_toBottomOf="@+id/mTvCompany"
        android:src="@mipmap/ic_company_verified"
        android:layout_marginLeft="@dimen/dp_20"/>

    <TextView
        android:id="@+id/mTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mTvCompany"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_39"
        android:drawableLeft="@mipmap/ic_job_lable"
        android:drawablePadding="@dimen/dp_15"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_36"
        tools:text="java开发工程师"/>

    <TextView
        android:id="@+id/mTvEmploymentNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvTitle"
        android:layout_marginTop="@dimen/dp_25"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        tools:text="已雇5人"/>

    <View
        android:id="@+id/line_employment_num"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_23"
        app:layout_constraintStart_toEndOf="@+id/mTvEmploymentNum"
        app:layout_constraintTop_toTopOf="@+id/mTvEmploymentNum"
        app:layout_constraintBottom_toBottomOf="@+id/mTvEmploymentNum"
        android:layout_marginStart="@dimen/dp_13"
        android:background="@color/color_666666"/>

    <TextView
        android:id="@+id/mTvSettlementMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/line_employment_num"
        app:layout_constraintTop_toTopOf="@+id/mTvEmploymentNum"
        app:layout_constraintBottom_toBottomOf="@+id/mTvEmploymentNum"
        android:layout_marginStart="@dimen/dp_20"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_24"
        tools:text="件结"/>

    <TextView
        android:id="@+id/mTvSettlementAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/tv_daily_salary"
        app:layout_constraintTop_toTopOf="@+id/mTvEmploymentNum"
        app:layout_constraintBottom_toBottomOf="@+id/mTvEmploymentNum"
        android:layout_marginRight="@dimen/dp_5"
        android:textStyle="bold"
        android:textSize="@dimen/dp_36"
        android:textColor="@color/color_E26853"
        tools:text="2000.00"/>

    <TextView
        android:id="@+id/tv_daily_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/mTvEmploymentNum"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_E26853"
        tools:text="元/日/人"/>

    <TextView
        android:id="@+id/mTvWorkDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvEmploymentNum"
        android:layout_marginTop="@dimen/dp_25"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        tools:text="12.29 - 01.02 (4天)(7.5小时/天)"/>

    <TextView
        android:id="@+id/mTvTotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mTvWorkDate"
        app:layout_constraintBottom_toBottomOf="@+id/mTvWorkDate"
        android:textStyle="bold"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        tools:text="总价：2000.00元/人"/>

    <TextView
        android:id="@+id/mTvWorkTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvWorkDate"
        android:layout_marginTop="@dimen/dp_25"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_24"
        tools:text="9:90 - 18:30"/>

    <TextView
        android:id="@+id/mTvServiceArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mTvWorkTime"
        app:layout_constraintBottom_toBottomOf="@+id/mTvWorkTime"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableLeft="@mipmap/ic_empty_location"
        android:drawablePadding="@dimen/dp_13"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        android:text="暂无数据"/>

    <View
        android:id="@+id/view_total_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        app:layout_constraintTop_toBottomOf="@+id/mTvWorkTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_27"
        android:background="@drawable/shape_f9f9f9_radius_7"/>

    <TextView
        android:id="@+id/mTvTotalPrepaid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/view_total_bg"
        app:layout_constraintStart_toStartOf="@+id/view_total_bg"
        app:layout_constraintEnd_toStartOf="@+id/mTvTotalSettlement"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="@dimen/dp_19"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_24"
        tools:text="0.00元"/>
    <TextView
        android:id="@+id/mTvTotalSettlement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mTvTotalPrepaid"
        app:layout_constraintEnd_toStartOf="@+id/mTvCreditFreeze"
        app:layout_constraintStart_toEndOf="@+id/mTvTotalPrepaid"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_24"
        tools:text="0.00元"/>
    <TextView
        android:id="@+id/mTvCreditFreeze"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mTvTotalPrepaid"
        app:layout_constraintEnd_toEndOf="@+id/view_total_bg"
        app:layout_constraintStart_toEndOf="@+id/mTvTotalSettlement"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/color_E26853"
        android:textSize="@dimen/dp_24"
        tools:text="200.00元/人"/>

    <TextView
        android:id="@+id/tv_total_prepaid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view_total_bg"
        app:layout_constraintStart_toStartOf="@+id/view_total_bg"
        app:layout_constraintEnd_toStartOf="@+id/tv_total_settlement"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginBottom="@dimen/dp_19"
        android:gravity="center"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="预付合计"/>
    <TextView
        android:id="@+id/tv_total_settlement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_total_prepaid"
        app:layout_constraintEnd_toStartOf="@+id/tv_credit_freeze"
        app:layout_constraintStart_toEndOf="@+id/tv_total_prepaid"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="结算合计"/>
    <TextView
        android:id="@+id/tv_credit_freeze"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_total_prepaid"
        app:layout_constraintEnd_toEndOf="@+id/view_total_bg"
        app:layout_constraintStart_toEndOf="@+id/tv_total_settlement"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center"
        android:textColor="@color/color_E26853"
        android:textSize="@dimen/dp_24"
        android:text="人才预冻结"/>

    <View android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_67"
        android:background="@color/color_DDDDDD"
        app:layout_constraintStart_toEndOf="@+id/mTvTotalPrepaid"
        app:layout_constraintTop_toTopOf="@+id/view_total_bg"
        app:layout_constraintBottom_toBottomOf="@+id/view_total_bg"/>

    <View android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_67"
        android:background="@color/color_DDDDDD"
        app:layout_constraintStart_toEndOf="@+id/mTvTotalSettlement"
        app:layout_constraintTop_toTopOf="@+id/view_total_bg"
        app:layout_constraintBottom_toBottomOf="@+id/view_total_bg"/>

    <TextView
        android:id="@+id/mTvGroupMessage"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/border_f7a730_radius_27"
        app:layout_constraintRight_toLeftOf="@+id/mTvDetail"
        app:layout_constraintTop_toTopOf="@+id/mTvDetail"
        android:layout_marginRight="@dimen/dp_37"
        android:visibility="gone"
        android:gravity="center"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_F7A730"
        android:text="群发消息"/>

    <TextView
        android:id="@+id/mTvDetail"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/border_f7a730_radius_27"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_total_bg"
        android:layout_marginTop="@dimen/dp_27"
        android:gravity="center"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_F7A730"
        android:text="岗位详情"/>

</androidx.constraintlayout.widget.ConstraintLayout>