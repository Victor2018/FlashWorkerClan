<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_6"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_28"
    android:paddingBottom="@dimen/dp_28"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/mTvCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="@dimen/dp_42"
        android:textStyle="bold"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_28"
        tools:text="深圳计算有限公司(企业)"/>

    <ImageView
        android:id="@+id/mIvCompanyVerified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/mTvCompany"
        app:layout_constraintTop_toTopOf="@+id/mTvCompany"
        app:layout_constraintBottom_toBottomOf="@+id/mTvCompany"
        android:src="@mipmap/ic_company_verified"
        android:layout_marginLeft="@dimen/dp_20"/>

    <TextView
        android:id="@+id/mTvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mTvCompany"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mTvStatus"
        android:layout_marginTop="@dimen/dp_39"
        android:paddingLeft="@dimen/dp_42"
        android:drawableLeft="@mipmap/ic_job_lable"
        android:drawablePadding="@dimen/dp_15"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_36"
        tools:text="java开发工程师"/>

    <TextView
        android:id="@+id/mTvWorkArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mTvTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_22"
        android:paddingLeft="@dimen/dp_42"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        tools:text="线上"/>

    <View
        android:id="@+id/line_work_area"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_23"
        android:background="@color/color_999999"
        app:layout_constraintStart_toEndOf="@+id/mTvWorkArea"
        app:layout_constraintTop_toTopOf="@+id/mTvWorkArea"
        app:layout_constraintBottom_toBottomOf="@+id/mTvWorkArea"
        android:layout_marginStart="@dimen/dp_20"/>

    <TextView
        android:id="@+id/mTvSettlementMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/line_work_area"
        app:layout_constraintTop_toTopOf="@+id/mTvWorkArea"
        app:layout_constraintBottom_toBottomOf="@+id/mTvWorkArea"
        android:layout_marginStart="@dimen/dp_20"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_24"
        tools:text="件结"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/mTvTotalAmount"
       app:layout_constraintBaseline_toBaselineOf="@+id/mTvTotalAmount"
        android:layout_marginEnd="@dimen/dp_5"
        android:textStyle="bold"
        android:textColor="@color/color_E26853"
        android:textSize="@dimen/dp_24"
        android:text="报酬:"/>

    <TextView
        android:id="@+id/mTvTotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/mTvTotalAmountUnit"
        app:layout_constraintTop_toTopOf="@+id/mTvSettlementMethod"
        app:layout_constraintBottom_toBottomOf="@+id/mTvSettlementMethod"
        android:layout_marginEnd="@dimen/dp_5"
        android:textStyle="bold"
        android:textColor="@color/color_E26853"
        android:textSize="@dimen/dp_36"
        tools:text="8000.00"/>

    <TextView
        android:id="@+id/mTvTotalAmountUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/mTvTotalAmount"
        android:paddingRight="@dimen/dp_42"
        android:textStyle="bold"
        android:textColor="@color/color_E26853"
        android:textSize="@dimen/dp_24"
        android:text="元"/>

    <TextView
        android:id="@+id/mTvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/mTvTitle"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_39"
        android:paddingRight="@dimen/dp_42"
        android:textStyle="bold"
        android:textColor="@color/color_E26853"
        android:textSize="@dimen/dp_24"
        tools:text="已结算"/>

    <TextView
        android:id="@+id/mTvWorkDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvWorkArea"
        android:layout_marginTop="@dimen/dp_26"
        android:paddingLeft="@dimen/dp_42"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        tools:text="12.29 - 01.02 (4天)(7.5小时/天)"/>

    <TextView
        android:id="@+id/mTvWorkTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvWorkDate"
        android:layout_marginTop="@dimen/dp_22"
        android:paddingLeft="@dimen/dp_42"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        tools:text="9:30 - 18:30"/>

    <TextView
        android:id="@+id/mTvSettlementAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/tv_settlement_amount_unit"
        app:layout_constraintTop_toTopOf="@+id/mTvWorkDate"
        app:layout_constraintBottom_toBottomOf="@+id/mTvWorkDate"
        android:layout_marginRight="@dimen/dp_5"
        android:textStyle="bold"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        tools:text="2000.00"/>

    <TextView
        android:id="@+id/tv_settlement_amount_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mTvWorkDate"
        app:layout_constraintBottom_toBottomOf="@+id/mTvWorkDate"
        android:paddingRight="@dimen/dp_42"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_666666"
        android:text="元/日"/>

    <View
        android:id="@+id/view_total_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_190"
        app:layout_constraintTop_toBottomOf="@+id/mTvWorkTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_27"
        android:layout_marginStart="@dimen/dp_42"
        android:layout_marginEnd="@dimen/dp_42"
        android:background="@drawable/shape_f9f9f9_radius_7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/mTvRewardAmount"
        app:layout_constraintTop_toTopOf="@+id/mTvRewardAmount"
        android:layout_marginEnd="@dimen/dp_5"
        android:textColor="@color/color_E26853"
        android:textSize="@dimen/dp_24"
        android:text="雇主奖励:"/>

    <TextView
        android:id="@+id/mTvRewardAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/view_total_bg"
        app:layout_constraintTop_toTopOf="@+id/view_total_bg"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_28"
        android:textStyle="bold"
        android:textColor="@color/color_E26853"
        android:textSize="@dimen/dp_24"
        tools:text="50.00元"/>

    <View
        android:id="@+id/line_reward"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_DDDDDD"
        app:layout_constraintTop_toBottomOf="@+id/mTvRewardAmount"
        app:layout_constraintStart_toStartOf="@+id/view_total_bg"
        app:layout_constraintEnd_toEndOf="@id/view_total_bg"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginStart="@dimen/dp_28"
        android:layout_marginEnd="@dimen/dp_28"/>

    <TextView
        android:id="@+id/mTvPrepaid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line_reward"
        app:layout_constraintStart_toStartOf="@+id/view_total_bg"
        app:layout_constraintEnd_toStartOf="@+id/mTvSettled"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="@dimen/dp_26"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_24"
        tools:text="0.00元"/>

    <TextView
        android:id="@+id/mTvSettled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mTvPrepaid"
        app:layout_constraintEnd_toStartOf="@+id/mTvTotalSettlement"
        app:layout_constraintStart_toEndOf="@+id/mTvPrepaid"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_24"
        tools:text="0.00元"/>

    <TextView
        android:id="@+id/mTvTotalSettlement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mTvPrepaid"
        app:layout_constraintEnd_toEndOf="@+id/view_total_bg"
        app:layout_constraintStart_toEndOf="@+id/mTvSettled"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_24"
        tools:text="200.00元"/>

    <TextView
        android:id="@+id/tv_prepaid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view_total_bg"
        app:layout_constraintStart_toStartOf="@+id/view_total_bg"
        app:layout_constraintEnd_toStartOf="@+id/tv_settled"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="已预付"/>

    <TextView
        android:id="@+id/tv_settled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_prepaid"
        app:layout_constraintEnd_toStartOf="@+id/tv_total_settlement"
        app:layout_constraintStart_toEndOf="@+id/tv_prepaid"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="已结算"/>
    <TextView
        android:id="@+id/tv_total_settlement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_prepaid"
        app:layout_constraintEnd_toEndOf="@+id/view_total_bg"
        app:layout_constraintStart_toEndOf="@+id/tv_settled"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_24"
        android:text="结算合计"/>

    <View android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_67"
        android:background="@color/color_DDDDDD"
        app:layout_constraintStart_toEndOf="@+id/mTvPrepaid"
        app:layout_constraintTop_toTopOf="@+id/line_reward"
        app:layout_constraintBottom_toBottomOf="@+id/view_total_bg"/>

    <View android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_67"
        android:background="@color/color_DDDDDD"
        app:layout_constraintStart_toEndOf="@+id/mTvSettled"
        app:layout_constraintTop_toTopOf="@+id/line_reward"
        app:layout_constraintBottom_toBottomOf="@+id/view_total_bg"/>

</androidx.constraintlayout.widget.ConstraintLayout>