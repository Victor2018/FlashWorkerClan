<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:fitsSystemWindows="true"
    tools:ignore="ResourceName">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:titleEnabled="false">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/transparent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="@string/app_name">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_30">
                    <ImageView
                        android:id="@+id/mIvBack"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_20"
                        android:src="@mipmap/ic_back"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/dp_10"
                        android:textSize="@dimen/dp_36"
                        android:textColor="@color/color_333333"
                        android:text="评价雇主"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_6"
        android:paddingBottom="@dimen/dp_41"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/mTvTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingLeft="@dimen/dp_42"
            android:paddingRight="@dimen/dp_42"
            android:paddingTop="@dimen/dp_40"
            android:background="@color/white"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp_28"
            android:text="尊敬的人才：请给深圳计算有限公司（企业）一个中肯的评价吧！"/>

        <RadioGroup
            android:id="@+id/mRgEvaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/mTvTip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="@dimen/dp_67"
            android:paddingBottom="@dimen/dp_67"
            android:paddingLeft="@dimen/dp_42"
            android:paddingRight="@dimen/dp_42"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/mRbVeryGood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:textColor="@color/rb_student_title_color"
                android:drawableTop="@drawable/rb_very_good_selector"
                android:drawablePadding="@dimen/dp_24"
                android:text="很好"/>
            <RadioButton
                android:id="@+id/mRbGeneral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_133"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/rb_student_title_color"
                android:drawableTop="@drawable/rb_general_selector"
                android:drawablePadding="@dimen/dp_24"
                android:text="一般"/>
            <RadioButton
                android:id="@+id/mRbVeryBad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_133"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/rb_student_title_color"
                android:drawableTop="@drawable/rb_very_bad_selector"
                android:drawablePadding="@dimen/dp_24"
                android:text="很差"/>
        </RadioGroup>

        <EditText
            android:id="@+id/mEtEvaluation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_467"
            app:layout_constraintTop_toBottomOf="@+id/mRgEvaluation"
            android:paddingLeft="@dimen/dp_42"
            android:paddingRight="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_6"
            android:paddingTop="@dimen/dp_27"
            android:paddingBottom="@dimen/dp_27"
            android:background="@color/white"
            android:maxLength="200"
            android:gravity="left|top"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_28"
            android:hint="请写下您的评价意见！(请遵守评价规则！)"/>

        <CheckBox
            android:id="@+id/mChkCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_anonymous_evaluation"
            app:layout_constraintBottom_toBottomOf="@+id/tv_anonymous_evaluation"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dp_32"
            android:padding="@dimen/dp_10"
            android:button="@drawable/chk_talent_employer_selector"/>

        <TextView
            android:id="@+id/tv_anonymous_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/mChkCheck"
            app:layout_constraintTop_toBottomOf="@+id/mEtEvaluation"
            android:layout_marginTop="@dimen/dp_39"
            android:textSize="@dimen/dp_28"
            android:textColor="@color/color_999999"
            android:text="匿名评价"/>

        <TextView
            android:id="@+id/mTvEvaluationRules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/dp_200"
            android:padding="@dimen/dp_10"
            android:textColor="@color/color_F7A730"
            android:textSize="@dimen/dp_24"
            android:text="《评价规则》"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/mTvSubmitEvaluation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_99"
        android:layout_gravity="bottom"
        android:background="@color/color_F7E047"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:textSize="@dimen/dp_32"
        android:textColor="@color/color_333333"
        android:text="提交评价"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>