<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_21"
    android:layout_marginRight="@dimen/dp_21"
    android:background="@drawable/shape_white_radius_13"
    android:paddingTop="@dimen/dp_27"
    android:paddingBottom="@dimen/dp_27"
    android:paddingLeft="@dimen/dp_21"
    android:paddingRight="@dimen/dp_21"
    tools:ignore="ResourceName">

    <com.flash.worker.lib.common.view.widget.ShapedImageView
        android:id="@+id/mCivAvatar"
        android:layout_width="@dimen/dp_93"
        android:layout_height="@dimen/dp_93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_avatar"
        android:scaleType="centerCrop"
        app:shape_mode="circle"
        app:stroke_color="@color/white"
        app:stroke_width="@dimen/dp_2"/>

    <TextView
        android:id="@+id/mTvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/mCivAvatar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_27"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_32"
        android:textStyle="bold"
        tools:text="王大锤"/>

    <TextView
        android:id="@+id/mTvSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mCivAvatar"
        android:layout_marginTop="@dimen/dp_27"
        android:layout_marginLeft="@dimen/dp_43"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_28"
        tools:text="男"/>

    <View
        android:id="@+id/line_sex"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_23"
        app:layout_constraintLeft_toRightOf="@+id/mTvSex"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        app:layout_constraintBottom_toBottomOf="@+id/mTvSex"
        android:layout_marginLeft="@dimen/dp_19"
        android:background="@color/color_999999"/>

    <TextView
        android:id="@+id/mTvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/line_sex"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        app:layout_constraintBottom_toBottomOf="@+id/mTvSex"
        android:layout_marginLeft="@dimen/dp_19"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_28"
        tools:text="24岁"/>

    <View
        android:id="@+id/line_age"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_23"
        app:layout_constraintLeft_toRightOf="@+id/mTvAge"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        app:layout_constraintBottom_toBottomOf="@+id/mTvSex"
        android:layout_marginLeft="@dimen/dp_19"
        android:background="@color/color_999999"/>

    <TextView
        android:id="@+id/mTvIdentity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/line_age"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        app:layout_constraintBottom_toBottomOf="@+id/mTvSex"
        android:layout_marginLeft="@dimen/dp_19"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_28"
        android:text="学生"/>

    <View
        android:id="@+id/line_identity"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_23"
        app:layout_constraintLeft_toRightOf="@+id/mTvIdentity"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        app:layout_constraintBottom_toBottomOf="@+id/mTvSex"
        android:layout_marginLeft="@dimen/dp_19"
        android:background="@color/color_999999"/>

    <TextView
        android:id="@+id/mTvHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/line_identity"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        app:layout_constraintBottom_toBottomOf="@+id/mTvSex"
        android:layout_marginLeft="@dimen/dp_19"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_28"
        tools:text="179cm"/>

    <View
        android:id="@+id/line_height"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_23"
        app:layout_constraintLeft_toRightOf="@+id/mTvHeight"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        app:layout_constraintBottom_toBottomOf="@+id/mTvSex"
        android:layout_marginLeft="@dimen/dp_19"
        android:background="@color/color_999999"/>

    <TextView
        android:id="@+id/mTvWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/line_height"
        app:layout_constraintTop_toTopOf="@+id/mTvSex"
        app:layout_constraintBottom_toBottomOf="@+id/mTvSex"
        android:layout_marginLeft="@dimen/dp_19"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_28"
        tools:text="58kg"/>

    <TextView
        android:id="@+id/mTvUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableRight="@mipmap/ic_user_id_copy"
        android:drawablePadding="@dimen/dp_19"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_28"
        tools:text="ID:12345678"/>

    <TextView
        android:id="@+id/mTvTalentCreditScore"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_34"
        app:layout_constraintStart_toStartOf="@+id/mTvUserName"
        app:layout_constraintBottom_toBottomOf="@+id/mCivAvatar"
        android:background="@drawable/shape_gradient_feffeda4_ffd424_radius_17"
        android:paddingStart="@dimen/dp_48"
        android:paddingEnd="@dimen/dp_15"
        android:gravity="center"
        android:textColor="@color/color_816800"
        android:textSize="@dimen/dp_20"
        android:text="信用分: 0"/>

    <TextView
        android:id="@+id/tv_talent_credit_score"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintStart_toStartOf="@+id/mTvTalentCreditScore"
        app:layout_constraintTop_toTopOf="@+id/mTvTalentCreditScore"
        app:layout_constraintBottom_toBottomOf="@+id/mTvTalentCreditScore"
        android:background="@drawable/round_border_feffeda4_ffd424_radius_20"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_talent_credit_score"
        app:layout_constraintEnd_toEndOf="@+id/tv_talent_credit_score"
        app:layout_constraintTop_toTopOf="@+id/tv_talent_credit_score"
        app:layout_constraintBottom_toBottomOf="@+id/tv_talent_credit_score"
        android:src="@mipmap/ic_home_credit_score"/>

    <TextView
        android:id="@+id/tv_live_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mTvSex"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_39"
        android:drawableLeft="@mipmap/ic_location_focus"
        android:drawablePadding="@dimen/dp_27"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_666666"
        android:text="现居地址："/>
    <TextView
        android:id="@+id/mTvLiveCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv_live_city"
        app:layout_constraintTop_toTopOf="@+id/tv_live_city"
        app:layout_constraintBottom_toBottomOf="@+id/tv_live_city"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_333333"
        tools:text="深圳市南山区"/>

    <TextView
        android:id="@+id/tv_work_years"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_live_city"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_38"
        android:drawableLeft="@mipmap/ic_hire_work_years"
        android:drawablePadding="@dimen/dp_25"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_666666"
        android:text="工作年限："/>

    <TextView
        android:id="@+id/mTvWorkYears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv_work_years"
        app:layout_constraintTop_toTopOf="@+id/tv_work_years"
        app:layout_constraintBottom_toBottomOf="@+id/tv_work_years"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_333333"
        tools:text="1 - 3年"/>

</androidx.constraintlayout.widget.ConstraintLayout>


