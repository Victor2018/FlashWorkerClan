<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_radius_13"
    android:paddingTop="@dimen/dp_27"
    android:paddingBottom="@dimen/dp_27"
    tools:ignore="MissingDefaultResource,ResourceName">

    <LinearLayout
        android:id="@+id/ll_talent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="@dimen/dp_21"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/line_talent"
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_27"
            android:background="@color/color_FFD424"/>

        <TextView
            android:id="@+id/tv_talent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_21"
            android:textSize="@dimen/dp_32"
            android:textColor="@color/color_333333"
            android:text="接活"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_talent"
        android:layout_below="@+id/ll_talent"
        android:layout_marginTop="@dimen/dp_39"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_28"
        android:text="技能方向："/>

    <TextView
        android:id="@+id/mTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_28"
        tools:text="JAVA工程师"/>

    <TextView
        android:id="@+id/tv_unit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_marginTop="@dimen/dp_39"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_28"
        android:text="报酬单价："/>

    <TextView
        android:id="@+id/mTvUnitPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv_unit_price"
        app:layout_constraintTop_toTopOf="@+id/tv_unit_price"
        app:layout_constraintBottom_toBottomOf="@+id/tv_unit_price"
        android:textStyle="bold"
        android:textColor="@color/color_E26853"
        android:textSize="@dimen/dp_28"
        tools:text="200元/小时"/>

    <TextView
        android:id="@+id/tv_service_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_unit_price"
        android:layout_marginTop="@dimen/dp_39"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_28"
        android:text="服务地区："/>

    <TextView
        android:id="@+id/mTvServiceArea"
        android:layout_width="@dimen/dp_500"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_21"
        app:layout_constraintLeft_toRightOf="@+id/tv_service_area"
        app:layout_constraintTop_toTopOf="@+id/tv_service_area"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_28"
        tools:text="南山区、福田区、罗湖区、宝安区、坪山新区"/>

</androidx.constraintlayout.widget.ConstraintLayout>


