<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_55"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/shape_white_radius_20"
    tools:ignore="MissingDefaultResource,ResourceName">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_28"
        android:paddingEnd="@dimen/dp_28">

        <com.flash.worker.lib.common.view.widget.RequiredTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_36"
            app:prefix_color="@color/color_E26853"
            app:android_text=" 闪工名"/>

        <EditText
            android:id="@+id/mEtName"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintStart_toEndOf="@+id/tv_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@null"
            android:gravity="center|right"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="6"
            android:textSize="@dimen/dp_28"
            android:textColorHint="@color/color_999999"
            android:textColor="@color/color_333333"
            android:hint="请输入2~6个字符"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line_name"
        style="@style/base_line_horizontal"
        android:layout_marginStart="@dimen/dp_42"
        android:layout_marginEnd="@dimen/dp_28"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:paddingStart="@dimen/dp_48"
        android:paddingEnd="@dimen/dp_28">

        <TextView
            android:id="@+id/tv_invite_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textColor="@color/color_CCCCCC"
            android:textSize="@dimen/dp_28"
            android:text="邀请人ID号"/>

        <EditText
            android:id="@+id/mEtInviteId"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintStart_toEndOf="@+id/tv_invite_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@null"
            android:gravity="center|right"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="8"
            android:textSize="@dimen/dp_28"
            android:textColorHint="@color/color_999999"
            android:textColor="@color/color_333333"
            android:hint="(选填)"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line_invite_id"
        style="@style/base_line_horizontal"
        android:layout_marginStart="@dimen/dp_42"
        android:layout_marginEnd="@dimen/dp_28"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/color_BBBBBB"
        android:text="如无邀请人可不填，邀请码为邀请人闪工号"/>

    <TextView
        android:id="@+id/mTvConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_95"
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="center"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_F7A730"
        android:text="确定"/>

</LinearLayout>




