<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_common_tip_dlg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mTvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_105"
        android:gravity="center"
        android:textSize="@dimen/dp_32"
        android:textColor="@color/color_333333"
        android:text="温馨提示" />
    <View
        style="@style/base_line_horizontal"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginRight="@dimen/dp_21"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_600"
        android:scrollbars="vertical">
        <TextView
            android:id="@+id/mTvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_80"
            android:paddingRight="@dimen/dp_80"
            android:paddingTop="@dimen/dp_66"
            android:paddingBottom="@dimen/dp_66"
            android:lineSpacingMultiplier="1.5"
            android:textColorLink="@color/color_F4CC28"
            android:text="@string/privacy_policy_content"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp_28" />
    </androidx.core.widget.NestedScrollView>

    <View
        style="@style/base_line_horizontal"
        android:layout_marginLeft="@dimen/dp_42"
        android:layout_marginRight="@dimen/dp_42"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_107"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/mTvCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="不同意"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/dp_28" />

        <View
            android:id="@+id/line_cancel"
            style="@style/base_line_vertical"
            android:layout_height="@dimen/dp_30"/>

        <TextView
            android:id="@+id/mTvOk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="同意"
            android:textColor="@color/color_F7A730"
            android:textSize="@dimen/dp_30" />
    </LinearLayout>

</LinearLayout>