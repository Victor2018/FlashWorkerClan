<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dlg_city_picker"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/mTvCancel"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_106"
        android:gravity="center"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_666666"
        android:text="取消"/>
    <TextView
        android:id="@+id/mTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_106"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_32"
        android:text="年龄要求"/>
    <TextView
        android:id="@+id/mTvConfirm"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_106"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_F7A730"
        android:text="确定"/>
    <View style="@style/base_line_horizontal"
        android:layout_below="@+id/mTvTitle"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginRight="@dimen/dp_21"/>

    <LinearLayout
        android:id="@+id/ll_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mTvTitle"
        android:paddingLeft="@dimen/dp_43"
        android:paddingRight="@dimen/dp_43"
        android:orientation="horizontal"
        android:gravity="center">
        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/mStartAgePicker"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_510"
            android:layout_weight="1"
            app:npv_DividerColor="@color/color_CCCCCC"
            app:npv_HintText=""
            app:npv_ShownCount="5"
            app:npv_WrapSelectorWheel="false"
            app:npv_TextColorNormal="@color/color_666666"
            app:npv_TextColorSelected="@color/color_333333"
            app:npv_TextSizeNormal="@dimen/dp_28"
            app:npv_TextSizeSelected="@dimen/dp_32"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_510"
            android:layout_weight="1">
            <cn.carbswang.android.numberpickerview.library.NumberPickerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:npv_DividerColor="@color/color_CCCCCC"
                app:npv_ShownCount="5"
                app:npv_TextColorNormal="@color/transparent"
                app:npv_TextColorSelected="@color/transparent"
                app:npv_TextSizeNormal="@dimen/dp_28"
                app:npv_TextSizeSelected="@dimen/dp_32"/>
            <View
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_333333"
                android:layout_gravity="center"/>
        </FrameLayout>

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/mEndAgePicker"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_510"
            android:layout_weight="1"
            app:npv_DividerColor="@color/color_CCCCCC"
            app:npv_HintText=""
            app:npv_ShownCount="5"
            app:npv_WrapSelectorWheel="false"
            app:npv_TextColorNormal="@color/color_666666"
            app:npv_TextColorSelected="@color/color_333333"
            app:npv_TextSizeNormal="@dimen/dp_28"
            app:npv_TextSizeSelected="@dimen/dp_32"/>
    </LinearLayout>
</RelativeLayout>