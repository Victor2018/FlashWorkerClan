<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mEmoticonPickerView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_450"
    tools:ignore="MissingDefaultResource,ResourceName" >

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/mVpCommonWords"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mRgCommonWords"
        android:layout_marginBottom="@dimen/dp_10"/>

    <RadioGroup
        android:id="@+id/mRgCommonWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/mRbTalent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_35"
            android:paddingBottom="@dimen/dp_35"
            android:paddingStart="@dimen/dp_42"
            android:paddingEnd="@dimen/dp_42"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_28"
            android:background="@drawable/rb_bottom_common_words_tab"
            android:drawablePadding="@dimen/dp_24"
            android:text="人才"/>
        <RadioButton
            android:id="@+id/mRbEmployer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_35"
            android:paddingBottom="@dimen/dp_35"
            android:paddingStart="@dimen/dp_42"
            android:paddingEnd="@dimen/dp_42"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_28"
            android:background="@drawable/rb_bottom_common_words_tab"
            android:drawablePadding="@dimen/dp_24"
            android:text="雇主"/>
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>


