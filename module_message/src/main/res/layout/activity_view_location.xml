<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.SendLocationActivity"
    tools:ignore="ResourceName">

    <com.amap.api.maps.MapView
        android:id="@+id/mMvLocation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/view_top_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_365"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_gradient_66000000_00000000_radius_0"/>

    <ImageView
        android:id="@+id/mIvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_90"
        android:layout_marginStart="@dimen/dp_22"
        android:padding="@dimen/dp_20"
        android:src="@mipmap/ic_white_back"/>

    <TextView
        android:id="@+id/mTvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mIvBack"
        app:layout_constraintBottom_toBottomOf="@+id/mIvBack"
        app:layout_constraintStart_toEndOf="@+id/mIvBack"
        android:layout_marginStart="@dimen/dp_13"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_36"
        android:text="位置信息"/>

    <ImageView
        android:id="@+id/mIvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_166"
        android:layout_marginEnd="@dimen/dp_32"
        android:padding="@dimen/dp_10"
        android:src="@mipmap/ic_my_location"/>

    <ImageView
        android:id="@+id/mIvNavigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_130"
        android:src="@mipmap/ic_navigate"/>

</androidx.constraintlayout.widget.ConstraintLayout>